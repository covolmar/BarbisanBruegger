<div class="container mb-4">
	<div class="row">
		<div class="col mb-4 text-center">
			<button class="btn btn-lg btn-primary" data-toggle="modal" data-target=".bd-example-modal-lg">Elemente hinzufügen</button>
		</div>
		<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
			<div class="modal-dialog modal-lg">
				<div class="modal-content">
					<div class="modal-header">
						<h5 class="modal-title">Wählen Sie eine Komponente aus</h5>
						<button type="button" class="close" data-dismiss="modal" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
					</div>
					<div class="modal-body">
						<ul class="list-group" id="rentItems">
							@foreach (var item in Model)
							{
								<li class="list-group-item">@item.Description</li>
							}
						</ul>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-primary">Hinzufügen</button>
						<button type="button" class="btn btn-secondary" data-dismiss="modal">Schliessen</button>
					</div>
				</div>
			</div>
		</div>
	</div>




